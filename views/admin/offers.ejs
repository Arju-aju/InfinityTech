<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Orders Management</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-gray-950 text-gray-200 min-h-screen flex">
    
    <!-- Sidebar -->
    <div class="bg-gray-900 text-white w-64 space-y-6 py-7 px-2 absolute inset-y-0 left-0 transform -translate-x-full md:relative md:translate-x-0 transition duration-200 ease-in-out z-20">
        <div class="flex items-center space-x-2 px-4">
            <span class="text-2xl font-extrabold">InfinityTech</span>
        </div>
        
        <nav class="space-y-2">
            <a href="/admin/dashboard" class="block py-2.5 px-4 rounded transition duration-200 <%= (typeof path !== 'undefined' && path === '/admin/dashboard') ? 'bg-gray-800 text-white' : 'text-gray-400 hover:bg-gray-800 hover:text-white' %>">
                <i class="fas fa-home w-6"></i>
                <span>Dashboard</span>
            </a>
            <a href="/admin/products" class="block py-2.5 px-4 rounded transition duration-200 <%= (typeof path !== 'undefined' && path.includes('/admin/product')) ? 'bg-gray-800 text-white' : 'text-gray-400 hover:bg-gray-800 hover:text-white' %>">
                <i class="fas fa-laptop w-6"></i>
                <span>Products</span>
            </a>
            <a href="/admin/categories" class="block py-2.5 px-4 rounded transition duration-200 <%= (typeof path !== 'undefined' && path.includes('/admin/categor')) ? 'bg-gray-800 text-white' : 'text-gray-400 hover:bg-gray-800 hover:text-white' %>">
                <i class="fas fa-tags w-6"></i>
                <span>Categories</span>
            </a>
            <a href="/admin/users" class="block py-2.5 px-4 rounded transition duration-200 <%= (typeof path !== 'undefined' && path === '/admin/users') ? 'bg-gray-800 text-white' : 'text-gray-400 hover:bg-gray-800 hover:text-white' %>">
                <i class="fas fa-users w-6"></i>
                <span>Customers</span>
            </a>
            <a href="/admin/orders" class="block py-2.5 px-4 rounded transition duration-200 <%= (typeof path !== 'undefined' && path === '/admin/orders') ? 'bg-gray-800 text-white' : 'text-gray-400 hover:bg-gray-800 hover:text-white' %>">
                <i class="fas fa-shopping-cart w-6"></i>
                <span>Orders</span>
            </a>
            <a href="/admin/offers" class="block py-2.5 px-4 rounded transition duration-200 <%= (typeof path !== 'undefined' && path === '/admin/offers') ? 'bg-gray-800 text-white' : 'text-gray-400 hover:bg-gray-800 hover:text-white' %>">
                <i class="fas fa-percent w-6"></i>
                <span>Offer</span>
            </a>
        </nav>
    </div>
    <div class="flex-1 flex flex-col overflow-hidden">
        <!-- Main Content Area -->
        <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-950 p-6">
            <!-- Header Section -->
            <div class="mb-8">
                <h1 class="text-3xl font-bold text-gray-200">Offer Management</h1>
                <p class="text-gray-400 mt-2">Manage your product and category offers</p>
            </div>

            <!-- Add New Offer Button -->
            <div class="mb-6">
                <a href="/admin/offers/add" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors inline-flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                    </svg>
                    Add New Offer
                </a>
            </div>

            <!-- Tabs Container -->
            <div class="bg-gray-900 rounded-lg shadow-lg overflow-hidden">
                <!-- Tabs -->
                <div class="border-b border-gray-700">
                    <ul class="flex flex-wrap -mb-px text-sm font-medium text-center" role="tablist">
                        <li class="mr-2" role="presentation">
                            <button class="inline-block p-4 border-b-2 rounded-t-lg text-gray-300" id="product-tab" data-tabs-target="#product-offers" type="button" role="tab" aria-selected="true">
                                Product Offers
                            </button>
                        </li>
                        <li class="mr-2" role="presentation">
                            <button class="inline-block p-4 border-b-2 rounded-t-lg text-gray-300" id="category-tab" data-tabs-target="#category-offers" type="button" role="tab" aria-selected="false">
                                Category Offers
                            </button>
                        </li>
                    </ul>
                </div>

                <!-- Tab Contents -->
                <div id="tabContent">
                    <!-- Product Offers Tab -->
                    <div class="hidden p-4 rounded-lg bg-gray-900" id="product-offers" role="tabpanel">
                        <div class="overflow-x-auto">
                            <table class="w-full text-sm text-left text-gray-300">
                                <thead class="text-xs text-gray-300 uppercase bg-gray-800">
                                    <tr>
                                        <th class="px-6 py-3">Name</th>
                                        <th class="px-6 py-3">Discount</th>
                                        <th class="px-6 py-3">Products</th>
                                        <th class="px-6 py-3">Valid Until</th>
                                        <th class="px-6 py-3">Status</th>
                                        <th class="px-6 py-3">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% offers.forEach(offer => { %>
                                        <% if (offer.products && offer.products.length > 0) { %>
                                            <tr class="bg-gray-900 border-b border-gray-800 hover:bg-gray-800">
                                            <td class="px-6 py-4 font-medium text-gray-900">
                                                <%= offer.name %>
                                                <p class="text-xs text-gray-500"><%= offer.description %></p>
                                            </td>
                                            <td class="px-6 py-4">
                                                <%= offer.discountValue %><%= offer.discountType === 'percentage' ? '%' : ' INR' %>
                                                <% if (offer.maxDiscount) { %>
                                                    <p class="text-xs text-gray-500">Max: ₹<%= offer.maxDiscount %></p>
                                                <% } %>
                                            </td>
                                            <td class="px-6 py-4">
                                                <%= offer.products.length %> products
                                            </td>
                                            <td class="px-6 py-4">
                                                <%= new Date(offer.endDate).toLocaleDateString() %>
                                            </td>
                                            <td class="px-6 py-4">
                                                <span class="<%= offer.isActive ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %> text-xs font-medium px-2.5 py-0.5 rounded">
                                                    <%= offer.isActive ? 'Active' : 'Inactive' %>
                                                </span>
                                            </td>
                                            <td class="px-6 py-4">
                                                <div class="flex space-x-2">
                                                    <a href="/admin/offers/edit/<%= offer._id %>" class="text-blue-600 hover:text-blue-900">Edit</a>
                                                    <button onclick="toggleOfferStatus('<%= offer._id %>')" class="text-red-600 hover:text-red-900">
                                                        <%= offer.isActive ? 'Deactivate' : 'Activate' %>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    <% } %>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>

            <!-- Category Offers Tab -->
            <div class="hidden p-4 rounded-lg bg-gray-900" id="category-offers" role="tabpanel">
                <div class="overflow-x-auto">
                    <table class="w-full text-sm text-left text-gray-500">
                        <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                            <tr>
                                <th class="px-6 py-3">Name</th>
                                <th class="px-6 py-3">Discount</th>
                                <th class="px-6 py-3">Categories</th>
                                <th class="px-6 py-3">Valid Until</th>
                                <th class="px-6 py-3">Status</th>
                                <th class="px-6 py-3">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% offers.forEach(offer => { %>
                                <% if (offer.categories && offer.categories.length > 0) { %>
                                    <tr class="bg-white border-b hover:bg-gray-50">
                                        <td class="px-6 py-4 font-medium text-gray-900">
                                            <%= offer.name %>
                                            <p class="text-xs text-gray-500"><%= offer.description %></p>
                                        </td>
                                        <td class="px-6 py-4">
                                            <%= offer.discountValue %><%= offer.discountType === 'percentage' ? '%' : ' INR' %>
                                            <% if (offer.maxDiscount) { %>
                                                <p class="text-xs text-gray-500">Max: ₹<%= offer.maxDiscount %></p>
                                            <% } %>
                                        </td>
                                        <td class="px-6 py-4">
                                            <%= offer.categories.length %> categories
                                        </td>
                                        <td class="px-6 py-4">
                                            <%= new Date(offer.endDate).toLocaleDateString() %>
                                        </td>
                                        <td class="px-6 py-4">
                                            <span class="<%= offer.isActive ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %> text-xs font-medium px-2.5 py-0.5 rounded">
                                                <%= offer.isActive ? 'Active' : 'Inactive' %>
                                            </span>
                                        </td>
                                        <td class="px-6 py-4">
                                            <div class="flex space-x-2">
                                                <a href="/admin/offers/edit/<%= offer._id %>" class="text-blue-600 hover:text-blue-900">Edit</a>
                                                <button onclick="toggleOfferStatus('<%= offer._id %>')" class="text-red-600 hover:text-red-900">
                                                    <%= offer.isActive ? 'Deactivate' : 'Activate' %>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                <% } %>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript for Tab Functionality -->
    <script>
        // Initialize tabs
        const tabElements = [
            {
                id: 'product-tab',
                triggerEl: document.querySelector('#product-tab'),
                targetEl: document.querySelector('#product-offers')
            },
            {
                id: 'category-tab',
                triggerEl: document.querySelector('#category-tab'),
                targetEl: document.querySelector('#category-offers')
            }
        ];

        // Show first tab by default
        tabElements[0].targetEl.classList.remove('hidden');
        tabElements[0].triggerEl.classList.add('text-blue-600', 'border-blue-600');

        // Add click handlers
        tabElements.forEach(tab => {
            tab.triggerEl.addEventListener('click', () => {
                // Hide all tabs
                tabElements.forEach(t => {
                    t.targetEl.classList.add('hidden');
                    t.triggerEl.classList.remove('text-blue-600', 'border-blue-600');
                });

                // Show clicked tab
                tab.targetEl.classList.remove('hidden');
                tab.triggerEl.classList.add('text-blue-600', 'border-blue-600');
            });
        });

        // Function to toggle offer status
        async function toggleOfferStatus(offerId) {
            try {
                const response = await fetch(`/admin/offers/toggle/${offerId}`, {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                if (response.ok) {
                    window.location.reload();
                } else {
                    alert('Failed to update offer status');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while updating the offer status');
            }
        }
    </script>
</body>
</html>