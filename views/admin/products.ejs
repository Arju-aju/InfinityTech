<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>InfinityTech Admin - Products</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-gray-100">
    <div class="min-h-screen flex">
        <!-- Sidebar -->
        <div class="bg-gray-900 text-white w-64 space-y-6 py-7 px-2 absolute inset-y-0 left-0 transform -translate-x-full md:relative md:translate-x-0 transition duration-200 ease-in-out">
            <div class="flex items-center space-x-2 px-4">
                <span class="text-2xl font-extrabold">InfinityTech</span>
            </div>
            
            <nav class="space-y-2">
                <a href="/admin/dashboard" class="block py-2.5 px-4 rounded hover:bg-gray-800 text-gray-400 hover:text-white">
                    <i class="fas fa-home w-6"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/admin/products" class="block py-2.5 px-4 rounded transition duration-200 bg-gray-800 text-white">
                    <i class="fas fa-laptop w-6"></i>
                    <span>Products</span>
                </a>
                <a href="/admin/orders" class="block py-2.5 px-4 rounded hover:bg-gray-800 text-gray-400 hover:text-white">
                    <i class="fas fa-shopping-cart w-6"></i>
                    <span>Orders</span>
                </a>
                <a href="/admin/users" class="block py-2.5 px-4 rounded hover:bg-gray-800 text-gray-400 hover:text-white">
                    <i class="fas fa-users w-6"></i>
                    <span>Users</span>
                </a>
                <a href="/admin/categories" class="block py-2.5 px-4 rounded hover:bg-gray-800 text-gray-400 hover:text-white">
                    <i class="fas fa-tags w-6"></i>
                    <span>Categories</span>
                </a>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Top Navigation -->
            <header class="bg-white shadow-sm flex justify-between items-center py-4 px-6">
                <div class="flex items-center">
                    <button class="text-gray-500 hover:text-gray-600 md:hidden">
                        <i class="fas fa-bars"></i>
                    </button>
                    <div class="ml-4">
                        <nav class="flex" aria-label="Breadcrumb">
                            <% breadcrumbs.forEach((item, index) => { %>
                                <li class="inline-flex items-center">
                                    <% if (index > 0) { %>
                                        <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                                        </svg>
                                    <% } %>
                                    <a href="<%= item.url %>" class="text-gray-700 hover:text-gray-900">
                                        <%= item.name %>
                                    </a>
                                </li>
                            <% }); %>
                        </nav>
                    </div>
                </div>

                <div class="flex items-center">
                    <div class="relative">
                        <button class="flex items-center text-gray-500 hover:text-gray-600">
                            <span class="mr-2">Admin</span>
                            <i class="fas fa-user-circle text-2xl"></i>
                        </button>
                    </div>
                    <a href="/admin/logout" class="ml-4 text-gray-500 hover:text-gray-600">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </div>
            </header>

            <!-- Main Content -->
            <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-100">
                <div class="container mx-auto px-6 py-8">
                    <div class="flex justify-between items-center mb-6">
                        <h3 class="text-gray-700 text-3xl font-medium">Products</h3>
                        <a href="/admin/addProduct" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">
                            <i class="fas fa-plus mr-2"></i>Add Product
                        </a>
                    </div>

                    <!-- Products Grid -->
                    <div class="grid gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
                        <% products.forEach(product => { %>
                            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                                <div class="relative pb-48 overflow-hidden">
                                    <img class="absolute inset-0 h-full w-full object-cover" 
                                         src="<%= product.images[0] || '/images/placeholder.jpg' %>" 
                                         alt="<%= product.name %>">
                                    <% if (product.discountPercentage) { %>
                                        <div class="absolute top-0 right-0 bg-red-500 text-white px-2 py-1 m-2 rounded-md text-sm">
                                            -<%= product.discountPercentage %>%
                                        </div>
                                    <% } %>
                                    <div class="absolute top-0 left-0 <%= getBrandColorClass(product.brand) %> text-white px-2 py-1 m-2 rounded-md text-sm">
                                        <%= product.brand %>
                                    </div>
                                </div>
                                <div class="p-4">
                                    <h2 class="text-xl font-semibold text-gray-800"><%= product.name %></h2>
                                    <p class="text-gray-600 mt-2 truncate"><%= product.description %></p>
                                    <div class="mt-3 flex items-center">
                                        <span class="text-gray-900 font-bold text-xl">$<%= product.discountedPrice || product.price %></span>
                                        <% if (product.discountedPrice) { %>
                                            <span class="text-gray-400 line-through text-sm ml-2">$<%= product.price %></span>
                                        <% } %>
                                    </div>
                                    <div class="mt-3 flex items-center text-sm text-gray-600">
                                        <i class="fas fa-box-open mr-2"></i>
                                        <span>Stock: <%= product.stock %></span>
                                    </div>
                                    <div class="mt-4 flex justify-between items-center">
                                        <a href="/admin/products/edit/<%= product._id %>" 
                                           class="text-blue-600 hover:text-blue-800">
                                            <i class="fas fa-edit mr-1"></i>Edit
                                        </a>
                                        <button onclick="deleteProduct('<%= product._id %>')" 
                                                class="text-red-600 hover:text-red-800">
                                            <i class="fas fa-trash-alt mr-1"></i>Delete
                                        </button>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>

                    <!-- Pagination -->
                    <% if (pagination.totalPages > 1) { %>
                        <div class="flex justify-center mt-8">
                            <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
                                <% if (pagination.currentPage > 1) { %>
                                    <a href="/admin/products?page=<%= pagination.currentPage - 1 %>" 
                                       class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                        <i class="fas fa-chevron-left"></i>
                                    </a>
                                <% } %>

                                <% for(let i = pagination.startPage; i <= pagination.endPage; i++) { %>
                                    <a href="/admin/products?page=<%= i %>" 
                                       class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium <%= i === pagination.currentPage ? 'text-blue-600 bg-blue-50' : 'text-gray-700 hover:bg-gray-50' %>">
                                        <%= i %>
                                    </a>
                                <% } %>

                                <% if (pagination.currentPage < pagination.totalPages) { %>
                                    <a href="/admin/products?page=<%= pagination.currentPage + 1 %>" 
                                       class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                <% } %>
                            </nav>
                        </div>
                    <% } %>
                </div>
            </main>
        </div>
    </div>

    <script>
        // Mobile menu toggle
        document.querySelector('button').addEventListener('click', () => {
            document.querySelector('.bg-gray-900').classList.toggle('-translate-x-full');
        });

        // Delete product function
        function deleteProduct(productId) {
            if (confirm('Are you sure you want to delete this product?')) {
                fetch(`/admin/products/delete/${productId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        window.location.reload();
                    } else {
                        alert('Failed to delete product');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while deleting the product');
                });
            }
        }
    </script>
</body>
</html>
