<%- include('./partials/adminHeader.ejs') %>

<div class="flex min-h-screen bg-gradient-to-br from-gray-900 to-gray-800 text-white">
    <%- include('./partials/adminSidebar.ejs') %>

    <div class="flex-1 p-6 lg:p-10">
        <div class="bg-gray-800 rounded-xl shadow-2xl p-6 transform transition-all duration-300 hover:shadow-indigo-500/20">
            <!-- Breadcrumbs -->
            <nav class="text-gray-400 text-sm mb-6">
                <a href="/admin/dashboard" class="hover:text-indigo-400 transition-colors">Dashboard</a> /
                <span class="text-gray-300">Coupon Management</span>
            </nav>

            <div class="flex justify-between items-center mb-8">
                <div>
                    <h1 class="text-3xl font-extrabold tracking-tight text-white">Coupon Management</h1>
                    <p class="text-sm text-gray-400 mt-1">Effortlessly manage your discount coupons</p>
                </div>
                <a href="/admin/createCoupon" class="px-5 py-2 bg-indigo-600 text-white rounded-lg shadow-md hover:bg-indigo-700 transition-all duration-200 flex items-center">
                    <i class="fas fa-plus mr-2"></i> Create Coupon
                </a>
            </div>

            <!-- Coupons Table -->
            <div class="overflow-x-auto">
                <% if (coupons.length === 0) { %>
                    <div class="text-center py-16 animate-fade-in">
                        <i class="fas fa-ticket-alt text-gray-500 text-6xl mb-4"></i>
                        <p class="text-gray-400 text-lg">No coupons yet. Start by creating one!</p>
                    </div>
                <% } else { %>
                    <table class="min-w-full bg-gray-700 rounded-lg overflow-hidden">
                        <thead class="bg-indigo-700">
                            <tr>
                                <th class="px-6 py-4 text-left text-xs font-semibold text-white uppercase">Code</th>
                                <th class="px-6 py-4 text-left text-xs font-semibold text-white uppercase">Discount</th>
                                <th class="px-6 py-4 text-left text-xs font-semibold text-white uppercase">Min Purchase</th>
                                <th class="px-6 py-4 text-left text-xs font-semibold text-white uppercase">Expiration</th>
                                <th class="px-6 py-4 text-left text-xs font-semibold text-white uppercase">Usage</th>
                                <th class="px-6 py-4 text-left text-xs font-semibold text-white uppercase">Status</th>
                                <th class="px-6 py-4 text-left text-xs font-semibold text-white uppercase">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-600">
                            <% coupons.forEach(coupon => { %>
                                <tr class="hover:bg-gray-600 transition-colors duration-150">
                                    <td class="px-6 py-4 font-medium"><%= coupon.code %></td>
                                    <td class="px-6 py-4"><%= coupon.discountValue %> <%= coupon.discountType === 'percentage' ? '%' : '$' %></td>
                                    <td class="px-6 py-4">$<%= coupon.minPurchase %></td>
                                    <td class="px-6 py-4"><%= new Date(coupon.expirationDate).toLocaleDateString() %></td>
                                    <td class="px-6 py-4"><%= coupon.usedCount %> / <%= coupon.usageLimit || 'Unlimited' %></td>
                                    <td class="px-6 py-4">
                                        <span class="px-3 py-1 text-xs font-semibold rounded-full <%= coupon.status === 'active' ? 'bg-green-500' : 'bg-red-500' %>">
                                            <%= coupon.status.charAt(0).toUpperCase() + coupon.status.slice(1) %>
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 flex space-x-3">
                                        <a href="/admin/coupon/edit/<%= coupon._id %>" class="text-indigo-400 hover:text-indigo-300 transition-colors"><i class="fas fa-edit"></i></a>
                                        <button class="delete-btn text-red-400 hover:text-red-300 transition-colors" data-id="<%= coupon._id %>">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>

                    <!-- Pagination -->
                    <div class="flex justify-center mt-8 space-x-3">
                        <% if (currentPage > 1) { %>
                            <a href="/admin/coupons?page=<%= currentPage - 1 %>" class="px-4 py-2 bg-gray-700 rounded-lg hover:bg-indigo-600 transition-all duration-200 flex items-center">
                                <i class="fas fa-chevron-left mr-2"></i> Previous
                            </a>
                        <% } %>
                        <% for (let i = 1; i <= totalPages; i++) { %>
                            <a href="/admin/coupons?page=<%= i %>" class="px-4 py-2 rounded-lg <%= currentPage === i ? 'bg-indigo-600 text-white' : 'bg-gray-700 text-gray-300 hover:bg-indigo-600' %> transition-all duration-200">
                                <%= i %>
                            </a>
                        <% } %>
                        <% if (currentPage < totalPages) { %>
                            <a href="/admin/coupons?page=<%= currentPage + 1 %>" class="px-4 py-2 bg-gray-700 rounded-lg hover:bg-indigo-600 transition-all duration-200 flex items-center">
                                Next <i class="fas fa-chevron-right ml-2"></i>
                            </a>
                        <% } %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Toast Container -->
    <div id="toast-container" class="fixed top-5 right-5 z-50"></div>
</div>

<%- include('./partials/adminFooter.ejs') %>

<script>
    function showToast(message, type = 'success') {
        const container = document.getElementById('toast-container');
        if (!container) {
            console.error('Toast container not found');
            return;
        }

        const toast = document.createElement('div');
        toast.className = `toast px-6 py-3 rounded-lg shadow-lg text-white mb-3 animate-slide-in ${type === 'success' ? 'bg-green-500' : 'bg-red-500'}`;
        toast.textContent = message;

        container.appendChild(toast);

        setTimeout(() => {
            toast.classList.remove('animate-slide-in');
            toast.classList.add('animate-slide-out');
            setTimeout(() => toast.remove(), 300);
        }, 3000);
    }

    // Show flash messages from server as toasts
    <% if (success && success.length) { %>
        document.addEventListener('DOMContentLoaded', () => {
            showToast('<%= success %>', 'success');
        });
    <% } %>
    <% if (error && error.length) { %>
        document.addEventListener('DOMContentLoaded', () => {
            showToast('<%= error %>', 'error');
        });
    <% } %>

    document.addEventListener('DOMContentLoaded', () => {
        // Handle delete buttons
        const deleteButtons = document.querySelectorAll('.delete-btn');
        if (deleteButtons && deleteButtons.length > 0) {
            deleteButtons.forEach(button => {
                button.addEventListener('click', async (e) => {
                    e.preventDefault();
                    const couponId = button.getAttribute('data-id');

                    if (!couponId) {
                        showToast('Invalid coupon ID', 'error');
                        return;
                    }

                    if (confirm('Are you sure you want to delete this coupon?')) {
                        try {
                            const response = await fetch(`/admin/coupon/delete/${couponId}`, {
                                method: 'DELETE',
                                headers: { 'Content-Type': 'application/json' }
                            });

                            const result = await response.json();

                            if (!response.ok) throw new Error(result.error || 'Failed to delete coupon');

                            showToast(result.message, 'success');

                            const row = button.closest('tr');
                            row.classList.add('opacity-0');
                            setTimeout(() => {
                                row.remove();
                                if (!document.querySelector('tbody tr')) location.reload();
                            }, 500);
                        } catch (error) {
                            showToast(error.message, 'error');
                        }
                    }
                });
            });
        }
    });
</script>

<style>
    @keyframes fade-in {
        from { opacity: 0; }
        to { opacity: 1; }
    }
    @keyframes slide-in {
        from { transform: translateX(100%); }
        to { transform: translateX(0); }
    }
    @keyframes slide-out {
        from { transform: translateX(0); }
        to { transform: translateX(100%); }
    }
    .animate-fade-in { animation: fade-in 0.5s ease-in; }
    .animate-slide-in { animation: slide-in 0.3s ease-out; }
    .animate-slide-out { animation: slide-out 0.3s ease-out; }
</style>