<%- include('./partials/adminHeader.ejs') %>

<div class="flex min-h-screen bg-gray-900 text-white">
    <!-- Sidebar -->
    <%- include('./partials/adminSidebar.ejs') %>

    <!-- Main Content -->
    <div class="flex-1 p-8 bg-gray-900 text-white">
        <div class="bg-gray-800 shadow-md rounded-lg p-6">
            
            <!-- Breadcrumbs -->
            <nav class="text-gray-400 text-sm mb-4">
                <a href="/admin/dashboard" class="hover:text-white">Dashboard</a> /
                <span class="text-gray-300">Coupon Management</span>
            </nav>

            <div class="flex justify-between items-center mb-6">
                <div>
                    <h1 class="text-2xl font-bold">Coupon Management</h1>
                    <p class="text-sm text-gray-400">Manage all discount coupons from here</p>
                </div>
                <a href="/admin/createCoupon" class="px-4 py-2 bg-indigo-600 text-white rounded-lg shadow-md hover:bg-indigo-700">
                    <i class="fas fa-plus mr-2"></i> Create Coupon
                </a>
            </div>

            <!-- Coupons Table -->
            <div class="overflow-x-auto">
                <% if (coupons.length === 0) { %>
                    <div class="text-center py-12">
                        <i class="fas fa-ticket-alt text-gray-400 text-5xl mb-4"></i>
                        <p class="text-gray-500">No coupons found. Create your first coupon to get started.</p>
                    </div>
                <% } else { %>
                    <table class="min-w-full bg-gray-800 border border-gray-700 rounded-lg overflow-hidden">
                        <thead class="bg-gray-700">
                            <tr class="text-left">
                                <th class="px-6 py-3 text-xs font-medium text-gray-300 uppercase">Code</th>
                                <th class="px-6 py-3 text-xs font-medium text-gray-300 uppercase">Discount</th>
                                <th class="px-6 py-3 text-xs font-medium text-gray-300 uppercase">Min Purchase</th>
                                <th class="px-6 py-3 text-xs font-medium text-gray-300 uppercase">Expiration</th>
                                <th class="px-6 py-3 text-xs font-medium text-gray-300 uppercase">Usage</th>
                                <th class="px-6 py-3 text-xs font-medium text-gray-300 uppercase">Status</th>
                                <th class="px-6 py-3 text-xs font-medium text-gray-300 uppercase">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-700">
                            <% coupons.forEach(coupon => { %>
                                <tr class="hover:bg-gray-700">
                                    <td class="px-6 py-4"><%= coupon.code %></td>
                                    <td class="px-6 py-4"><%= coupon.discountValue %> <%= coupon.discountType === 'percentage' ? '%' : '$' %></td>
                                    <td class="px-6 py-4">$<%= coupon.minPurchase %></td>
                                    <td class="px-6 py-4"><%= new Date(coupon.expirationDate).toLocaleDateString() %></td>
                                    <td class="px-6 py-4"><%= coupon.usedCount %> / <%= coupon.usageLimit || 'Unlimited' %></td>
                                    <td class="px-6 py-4">
                                        <span class="px-2 py-1 text-xs rounded-full font-semibold <%= coupon.status === 'active' ? 'bg-green-500 text-white' : 'bg-red-500 text-white' %>">
                                            <%= coupon.status.charAt(0).toUpperCase() + coupon.status.slice(1) %>
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 flex space-x-2">
                                        <a href="/coupons/edit/<%= coupon._id %>" class="text-indigo-400 hover:text-indigo-500"><i class="fas fa-edit"></i></a>
                                        <button class="delete-btn text-red-400 hover:text-red-500" data-id="<%= coupon._id %>">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                    
                    <!-- Pagination -->
                    <div class="flex justify-center mt-6 space-x-2">
                        <% if (currentPage > 1) { %>
                            <a href="/admin/coupons?page=<%= currentPage - 1 %>" class="px-4 py-2 bg-gray-700 text-white rounded-lg shadow-md hover:bg-gray-600">
                                <i class="fas fa-chevron-left"></i> Previous
                            </a>
                        <% } %>

                        <% for (let i = 1; i <= totalPages; i++) { %>
                            <a href="/admin/coupons?page=<%= i %>" class="px-4 py-2 rounded-lg shadow-md <%= currentPage === i ? 'bg-indigo-600 text-white' : 'bg-gray-700 text-gray-300 hover:bg-gray-600' %>">
                                <%= i %>
                            </a>
                        <% } %>

                        <% if (currentPage < totalPages) { %>
                            <a href="/admin/coupons?page=<%= currentPage + 1 %>" class="px-4 py-2 bg-gray-700 text-white rounded-lg shadow-md hover:bg-gray-600">
                                Next <i class="fas fa-chevron-right"></i>
                            </a>
                        <% } %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
<div id="notification" class="fixed top-5 right-5 px-4 py-2 rounded-lg shadow-md text-white hidden"></div>
</div>

<%- include('./partials/adminFooter.ejs') %>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const deleteButtons = document.querySelectorAll('.delete-btn');
    
        deleteButtons.forEach(button => {
            button.addEventListener('click', async (e) => {
                e.preventDefault();
                const couponId = button.getAttribute('data-id');
    
                if (!couponId) {
                    showNotification('Invalid coupon ID', 'red');
                    return;
                }
    
                if (confirm('Are you sure you want to delete this coupon?')) {
                    try {
                        const response = await fetch(`/admin/coupon/delete/${couponId}`, {
                            method: 'DELETE',
                            headers: {
                                'Content-Type': 'application/json'
                            }
                        });
    
                        if (!response.ok) {
                            const errorData = await response.json();
                            throw new Error(errorData.error || 'Failed to delete coupon');
                        }
    
                        const result = await response.json();
                        showNotification(result.message, 'green');
    
                        // Remove the coupon row smoothly
                        const row = button.closest('tr');
                        if (row) {
                            row.style.transition = 'opacity 0.5s';
                            row.style.opacity = '0';
                            setTimeout(() => {
                                row.remove();
                                // If no more rows exist, reload the page
                                if (document.querySelectorAll('tbody tr').length === 0) {
                                    location.reload();
                                }
                            }, 500);
                        }
                    } catch (error) {
                        console.error('Error deleting coupon:', error);
                        showNotification(error.message, 'red');
                    }
                }
            });
        });
    });
    
    // Notification function
    function showNotification(message, color) {
        const notification = document.getElementById('notification');
        notification.textContent = message;
        notification.className = `fixed top-5 right-5 px-4 py-2 rounded-lg shadow-md text-white bg-${color}-500 z-50`;
        notification.classList.remove('hidden');
    
        setTimeout(() => {
            notification.classList.add('hidden');
        }, 3000);
    }
    </script>
    

