<%- include('./partials/adminHeader.ejs') %>

<div class="flex min-h-screen bg-gradient-to-br from-gray-900 via-indigo-900 to-purple-900 text-white">
    <%- include('./partials/adminSidebar.ejs') %>

    <div class="flex-1 p-6 lg:p-10 flex items-center justify-center">
        <div class="bg-gray-800 rounded-xl shadow-2xl p-8 w-full max-w-2xl transform transition-all duration-300 hover:shadow-indigo-500/30">
            <h1 class="text-3xl font-extrabold text-white mb-2">Edit Coupon: <%= coupon.code %></h1>
            <p class="text-sm text-gray-300 mb-6">Update the coupon details below</p>

            <form action="/admin/coupon/update/<%= coupon._id %>" method="POST" id="editCouponForm" class="space-y-6">
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                    <div>
                        <label for="code" class="block text-sm font-medium text-gray-300">Coupon Code*</label>
                        <input type="text" name="code" id="code" value="<%= coupon.code %>"
                               class="mt-1 w-full bg-gray-700 text-white border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500 uppercase" required>
                    </div>
                    <div>
                        <label for="discountType" class="block text-sm font-medium text-gray-300">Discount Type*</label>
                        <select id="discountType" name="discountType" class="mt-1 w-full bg-gray-700 text-white border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500">
                            <option value="percentage" <%= coupon.discountType === 'percentage' ? 'selected' : '' %>>Percentage (%)</option>
                            <option value="fixed" <%= coupon.discountType === 'fixed' ? 'selected' : '' %>>Fixed Amount ($)</option>
                        </select>
                    </div>
                    <div>
                        <label for="discountValue" class="block text-sm font-medium text-gray-300">Discount Value* <span class="discount-type-label">(<%= coupon.discountType === 'percentage' ? 'in %' : 'in $' %>)</span></label>
                        <input type="number" name="discountValue" id="discountValue" min="0" step="0.01" value="<%= coupon.discountValue %>"
                               class="mt-1 w-full bg-gray-700 text-white border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" required>
                    </div>
                    <div class="max-discount-container <%= coupon.discountType === 'fixed' ? 'hidden' : '' %>">
                        <label for="maxDiscount" class="block text-sm font-medium text-gray-300">Max Discount ($)</label>
                        <input type="number" name="maxDiscount" id="maxDiscount" min="0" step="0.01" value="<%= coupon.maxDiscount || '' %>"
                               class="mt-1 w-full bg-gray-700 text-white border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500">
                    </div>
                    <div>
                        <label for="minPurchase" class="block text-sm font-medium text-gray-300">Min Purchase ($)</label>
                        <input type="number" name="minPurchase" id="minPurchase" min="0" step="0.01" value="<%= coupon.minPurchase %>"
                               class="mt-1 w-full bg-gray-700 text-white border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500">
                    </div>
                    <div>
                        <label for="expirationDate" class="block text-sm font-medium text-gray-300">Expiration Date*</label>
                        <input type="date" name="expirationDate" id="expirationDate" value="<%= coupon.expirationDate.toISOString().split('T')[0] %>"
                               class="mt-1 w-full bg-gray-700 text-white border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" required>
                    </div>
                    <div>
                        <label for="usageLimit" class="block text-sm font-medium text-gray-300">Usage Limit</label>
                        <input type="number" name="usageLimit" id="usageLimit" min="1" step="1" value="<%= coupon.usageLimit || '' %>"
                               class="mt-1 w-full bg-gray-700 text-white border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500" placeholder="Unlimited">
                    </div>
                    <div>
                        <label for="status" class="block text-sm font-medium text-gray-300">Status</label>
                        <select id="status" name="status" class="mt-1 w-full bg-gray-700 text-white border border-gray-600 rounded-lg p-3 focus:ring-indigo-500 focus:border-indigo-500">
                            <option value="active" <%= coupon.status === 'active' ? 'selected' : '' %>>Active</option>
                            <option value="disabled" <%= coupon.status === 'disabled' ? 'selected' : '' %>>Disabled</option>
                            <option value="expired" <%= coupon.status === 'expired' ? 'selected' : '' %>>Expired</option>
                        </select>
                    </div>
                    <div class="sm:col-span-2">
                        <label class="block text-sm font-medium text-gray-300">Used Count</label>
                        <p class="mt-1 text-gray-400"><%= coupon.usedCount %> times</p>
                    </div>
                </div>

                <div class="flex justify-end space-x-4">
                    <a href="/admin/coupon" class="px-5 py-2 bg-gray-600 text-gray-200 rounded-lg hover:bg-gray-500 transition-all duration-200">Cancel</a>
                    <button type="submit" class="px-5 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-all duration-200">Update Coupon</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Toast Container -->
    <div id="toast-container" class="fixed top-5 right-5 z-50"></div>
</div>

<%- include('./partials/adminFooter.ejs') %>

<script>
    function showToast(message, type = 'success') {
        const toast = document.createElement('div');
        toast.className = `toast px-6 py-3 rounded-lg shadow-lg text-white mb-3 animate-slide-in ${type === 'success' ? 'bg-green-500' : 'bg-red-500'}`;
        toast.textContent = message;

        const container = document.getElementById('toast-container');
        container.appendChild(toast);

        setTimeout(() => {
            toast.classList.remove('animate-slide-in');
            toast.classList.add('animate-slide-out');
            setTimeout(() => toast.remove(), 300);
        }, 3000);
    }

    // Show flash messages from server
    <% if (success && success.length) { %>
        showToast('<%= success %>', 'success');
    <% } %>
    <% if (error && error.length) { %>
        showToast('<%= error %>', 'error');
    <% } %>
    <% if (errors && errors.length) { %>
        <% errors.forEach(error => { %>
            showToast('<%= error %>', 'error');
        <% }) %>
    <% } %>

    document.addEventListener('DOMContentLoaded', () => {
        const discountType = document.getElementById('discountType');
        const discountLabel = document.querySelector('.discount-type-label');
        const maxDiscountContainer = document.querySelector('.max-discount-container');
        const form = document.getElementById('editCouponForm');
        const today = new Date().toISOString().split('T')[0];
        document.getElementById('expirationDate').min = today;

        function updateDiscountFields() {
            discountLabel.textContent = discountType.value === 'percentage' ? '(in %)' : '(in $)';
            maxDiscountContainer.classList.toggle('hidden', discountType.value !== 'percentage');
        }

        discountType.addEventListener('change', updateDiscountFields);
        updateDiscountFields();

        form.addEventListener('submit', (e) => {
            const discountValue = document.getElementById('discountValue').value;
            const maxDiscount = document.getElementById('maxDiscount').value;
            let errors = [];

            if (discountType.value === 'percentage' && (discountValue <= 0 || discountValue > 100)) {
                errors.push('Percentage discount must be between 1 and 100.');
            }
            if (discountType.value === 'percentage' && maxDiscount && maxDiscount <= 0) {
                errors.push('Max discount must be a positive number.');
            }

            if (errors.length) {
                e.preventDefault();
                errors.forEach(error => showToast(error, 'error'));
            }
        });
    });
</script>

<style>
    @keyframes fade-in {
        from { opacity: 0; }
        to { opacity: 1; }
    }
    @keyframes slide-in {
        from { transform: translateX(100%); }
        to { transform: translateX(0); }
    }
    @keyframes slide-out {
        from { transform: translateX(0); }
        to { transform: translateX(100%); }
    }
    .animate-fade-in { animation: fade-in 0.5s ease-in; }
    .animate-slide-in { animation: slide-in 0.3s ease-out; }
    .animate-slide-out { animation: slide-out 0.3s ease-out; }
</style>