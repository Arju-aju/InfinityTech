    </div>
  </section>

  <!-- Mission & Vision -->
  <section id="mission" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
