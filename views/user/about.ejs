<%- include('../partials/header') %>

<!-- About Page -->
<div class="bg-gray-100 min-h-screen">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-r from-gray-800 via-indigo-900 to-gray-900 overflow-hidden">
    <div class="absolute inset-0">
      <img class="w-full h-full object-cover opacity-30" src="/images/about-hero.jpg" alt="About InfinityTech">
      <div class="absolute inset-0 bg-gray-900 mix-blend-multiply opacity-60"></div>
    </div>
    <div class="relative max-w-7xl mx-auto py-24 px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold text-white tracking-tight animate-fadeIn">
        About <span class="text-yellow-400">InfinityTech</span>
      </h1>
      <p class="mt-6 text-xl text-gray-200 max-w-3xl mx-auto leading-relaxed animate-slideUp">
        Pioneering the future of computing with innovative laptop solutions that empower professionals, creators, and enthusiasts alike.
      </p>
      <a href="#mission" class="mt-8 inline-block px-8 py-3 bg-yellow-400 text-gray-900 font-semibold rounded-full shadow-lg hover:bg-yellow-500 hover:scale-105 transition-all duration-300">
        Discover Our Story
