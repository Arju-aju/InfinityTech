<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>InfinityTech - Sign Up</title>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-gradient-to-br from-[#2845AE] via-[#5D2E8C] to-[#A517BA] min-h-screen">
    <div class="container mx-auto px-4 h-screen flex items-center justify-center">
        <div class="max-w-md w-full space-y-8 bg-white p-10 rounded-xl shadow-2xl">
            <div>
                <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                    Create Account
                </h2>
                <p class="mt-2 text-center text-sm text-gray-600">
                    Join InfinityTech today
                </p>
            </div>

            <!-- Display flash messages if any -->
            <% if (message && message.content) { %>
                <div class="text-center text-sm p-2 rounded <%= message.type === 'error' ? 'bg-red-100 text-red-700' : 'bg-green-100 text-green-700' %>">
                    <%= message.content %>
                </div>
            <% } %>

            <form id="signupForm" class="mt-8 space-y-6" method="POST" action="/signup">
                <div class="rounded-md shadow-sm space-y-4">
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-700">Full Name</label>
                        <input id="name" 
                            name="name" 
                            type="text" 
                            class="appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-[#2845AE] focus:border-[#2845AE] sm:text-sm" 
                            placeholder="John Doe">
                        <p id="nameError" class="hidden text-red-500 text-xs mt-1">Name is required.</p>
                    </div>

                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700">Email address</label>
                        <input id="email" 
                            name="email" 
                            type="email" 
                            class="appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-[#2845AE] focus:border-[#2845AE] sm:text-sm" 
                            placeholder="you@example.com">
                        <p id="emailError" class="hidden text-red-500 text-xs mt-1">Valid email is required.</p>
                    </div>

                    <div>
                        <label for="phone" class="block text-sm font-medium text-gray-700">Phone Number</label>
                        <input id="phone" 
                            name="phone" 
                            type="text" 
                            class="appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-[#2845AE] focus:border-[#2845AE] sm:text-sm" 
                            placeholder="9876543210">
                        <p id="phoneError" class="hidden text-red-500 text-xs mt-1">Phone number must start with 6, 7, 8, or 9 and have 10 digits.</p>
                    </div>

                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
                        <input id="password" 
                            name="password" 
                            type="password" 
                            class="appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-[#2845AE] focus:border-[#2845AE] sm:text-sm" 
                            placeholder="••••••••">
                        <p id="passwordError" class="hidden text-red-500 text-xs mt-1">Password is required.</p>
                    </div>

                    <div>
                        <label for="confirmPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
                        <input id="confirmPassword" 
                            name="confirmPassword" 
                            type="password" 
                            class="appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-[#2845AE] focus:border-[#2845AE] sm:text-sm" 
                            placeholder="••••••••">
                        <p id="confirmPasswordError" class="hidden text-red-500 text-xs mt-1">Passwords do not match.</p>
                    </div>
                </div>

                <div>
                    <button type="submit" 
                        class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-[#2845AE] hover:bg-[#1e3690] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#2845AE]">
                        <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                            <i class="fas fa-user-plus text-[#1e3690] group-hover:text-[#2845AE]"></i>
                        </span>
                        Create Account
                    </button>
                </div>
            </form>

            <div class="mt-6">
                <div class="relative">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-300"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-2 bg-white text-gray-500">
                            Or continue with
                        </span>
                    </div>
                </div>

                <div class="mt-6 grid grid-cols-2 gap-3">
                    <div>
                        <a href="/auth/google" 
                           class="w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                            <i class="fab fa-google text-red-500"></i>
                            <span class="ml-2">Google</span>
                        </a>
                    </div>
                    <div>
                        <a href="/auth/facebook"
                           class="w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                            <i class="fab fa-facebook text-blue-600"></i>
                            <span class="ml-2">Facebook</span>
                        </a>
                    </div>
                </div>
            </div>

            <div class="text-center">
                <p class="text-sm text-gray-600">
                    Already have an account? 
                    <a href="/login" class="font-medium text-[#2845AE] hover:text-[#1e3690]">
                        Sign in
                    </a>
                </p>
            </div>
        </div>
    </div>

    <!-- Return to Home -->
    <div class="fixed top-4 left-4">
        <a href="/" class="flex items-center text-white hover:text-gray-200">
            <i class="fas fa-arrow-left mr-2"></i>
            Back to Home
        </a>
    </div>

    <script>
        document.getElementById('signupForm').addEventListener('submit', async function (e) {
    e.preventDefault();

    const name = document.getElementById('name').value.trim();
    const email = document.getElementById('email').value.trim();
    const phone = document.getElementById('phone').value.trim();
    const password = document.getElementById('password').value;
    const confirmPassword = document.getElementById('confirmPassword').value;

    const formData = {
        name,
        email,
        phone,
        password,
        confirmPassword
    };

    try {
        const response = await fetch('/signup', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(formData)
        });

        const data = await response.json();

        if (data.success) {
            Swal.fire({
                icon: 'success',
                title: 'Success!',
                text: 'Account created successfully. Redirecting...',
                timer: 1500,
                showConfirmButton: false
            }).then(() => {
                window.location.href = data.redirect || '/login';
            });
        } else {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: data.message || 'An error occurred during signup.'
            });
        }
    } catch (error) {
        console.error('Error:', error);
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'An error occurred. Please try again.'
        });
    }
});

    </script>
</body>
</html>