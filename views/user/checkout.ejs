<%- include('../partials/header') %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 bg-gray-50">
  <h2 class="text-center text-3xl font-extrabold text-gray-900 mb-8">Checkout</h2>
  
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Order Summary -->
    <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-200">
      <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
        <h3 class="text-xl font-semibold text-gray-800">Order Summary</h3>
      </div>
      <div class="divide-y divide-gray-200">
        <% cart.items.forEach(item => { %>
          <div class="flex items-center p-4 hover:bg-gray-50 transition-colors">
            <div class="flex-shrink-0">
              <img class="h-16 w-16 object-cover rounded-md shadow-sm" src="<%= item.product.images[0] %>" alt="<%= item.product.name %>">
            </div>
            <div class="ml-4 flex-1">
              <p class="font-medium text-gray-900"><%= item.product.name %></p>
              <p class="text-sm text-gray-500">Qty: <%= item.quantity %></p>
            </div>
            <div class="font-semibold text-gray-900">₹<%= (item.price * item.quantity).toFixed(2) %></div>
          </div>
        <% }); %>
      </div>
      <div class="bg-gray-50 p-4">
        <div class="flex justify-between py-2">
          <span class="text-gray-600">Subtotal</span>
          <span class="font-medium">₹<%= subtotal.toFixed(2) %></span>
        </div>
        <div class="flex justify-between py-2">
          <span class="text-gray-600">Shipping Charge</span>
          <span class="font-medium">₹30.00</span>
        </div>
        <div class="flex justify-between py-2 border-t border-gray-200 mt-2">
          <span class="text-lg font-semibold text-gray-900">Total</span>
          <span class="text-lg font-semibold text-indigo-600">₹<%= totalAmount.toFixed(2) %></span>
        </div>
      </div>
    </div>
    
    <!-- Shipping Information -->
    <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-200">
      <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
        <h3 class="text-xl font-semibold text-gray-800">Shipping Information</h3>
      </div>
      <div class="p-6">
        <form action="/checkout/place-order" method="POST">
          <div class="space-y-4">
            <% addresses.forEach((address, index) => { %>
              <div class="relative flex items-start p-4 rounded-md border border-gray-200 hover:border-indigo-200 hover:bg-indigo-50 transition-colors">
                <div class="flex items-center h-5">
                  <input 
                    id="address_<%= index %>" 
                    name="addressId" 
                    type="radio" 
                    value="<%= address._id %>" 
                    required 
                    <%= index === defaultAddressIndex ? 'checked' : '' %>
                    class="h-4 w-4 text-indigo-600 border-gray-300 focus:ring-indigo-500"
                  >
                </div>
                <div class="ml-3 flex-1">
                  <label for="address_<%= index %>" class="font-medium text-gray-900 block cursor-pointer">
                    <%= address.fullName %>
                  </label>
                  <p class="text-gray-600"><%= address.street %>, <%= address.city %>, <%= address.state %> <%= address.pincode %></p>
                  <p class="text-gray-600">Phone: <%= address.phone %></p>
                </div>
              </div>
            <% }); %>
          </div>
          
          <a href="/address" class="inline-flex items-center mt-4 text-sm font-medium text-indigo-600 hover:text-indigo-500">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
            </svg>
            Add New Address
          </a>
          
          <div class="mt-8">
            <h3 class="text-xl font-semibold text-gray-800 mb-4">Payment Method</h3>
            <div class="bg-gray-50 p-4 rounded-lg border border-gray-200">
              <div class="flex items-center">
                <input 
                  id="cod" 
                  name="paymentMethod" 
                  type="radio" 
                  value="cod" 
                  required 
                  checked 
                  class="h-4 w-4 text-indigo-600 border-gray-300 focus:ring-indigo-500"
                >
                <label for="cod" class="ml-3 block text-gray-700 font-medium">
                  Cash on Delivery
                </label>
              </div>
            </div>
          </div>
          =
          <div class="mt-8">
           
              
            <button 
  type="submit" 
  class="w-full bg-indigo-500 hover:bg-fuchsia-500 border border-transparent rounded-md shadow-sm py-4 px-4 text-lg font-bold text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors"
>
  Place Order
</button>

          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>