<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>InfinityTech - Premium Laptops</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-white">
    <!-- Navigation -->
    <nav class="bg-[#2845AE] text-white">
        <div class="max-w-7xl mx-auto px-4">
            <div class="flex justify-between h-16">
                <div class="flex-shrink-0">
                    <a href="/" class="text-2xl font-bold text-white">
                        Infinity<span class="text-cyan-500">Tech</span>
                    </a>
                </div>
                <div class="flex items-center space-x-8">
                    <a href="/" class="hover:text-gray-200">Home</a>
                    <a href="/products" class="hover:text-gray-200">Products</a>
                    <a href="/about" class="hover:text-gray-200">About</a>
                    <a href="/contact" class="hover:text-gray-200">Contact</a>
                    <% if (isLoggedIn) { %>
                        <span class="text-gray-200">Welcome, <%= username %></span>
                        <a href="/logout" class="bg-white text-[#2845AE] px-4 py-2 rounded hover:bg-gray-100">Logout</a>
                    <% } else { %>
                        <a href="/login" class="bg-transparent border border-white text-white px-4 py-2 rounded hover:bg-white hover:text-[#2845AE]">Login</a>
                        <a href="/signup" class="bg-white text-[#2845AE] px-4 py-2 rounded hover:bg-gray-100">Register</a>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <div class="bg-gradient-to-br from-[#2845AE] via-[#5D2E8C] to-[#A517BA] text-white min-h-[500px] flex items-center">
        <div class="max-w-7xl mx-auto px-4 py-20 text-center">
            <h1 class="text-5xl font-bold mb-6">Discover Your Perfect Laptop</h1>
            <p class="text-xl mb-12">Explore our wide range of premium laptops for work, gaming, and creativity</p>
            <div class="flex justify-center gap-4">
                <a href="/shop" class="bg-white text-[#2845AE] px-6 py-3 rounded-md hover:bg-gray-100 font-medium">
                    Browse Collection
                </a>
                <a href="/categories" class="border border-white text-white px-6 py-3 rounded-md hover:bg-white hover:text-[#2845AE] font-medium">
                    View Categories
                </a>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="max-w-7xl mx-auto px-4 py-20">
        <h2 class="text-3xl font-bold text-[#2845AE] text-center mb-16">Featured Products</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-12 text-center">
            <!-- Free Shipping -->
            <div class="flex flex-col items-center">
                <div class="text-[#2845AE] mb-4">
                    <i class="fas fa-box-open text-4xl"></i>
                </div>
                <h3 class="text-xl font-bold text-[#2845AE] mb-2">Free Shipping</h3>
                <p class="text-gray-600">Free shipping on all orders</p>
            </div>

            <!-- 2 Year Warranty -->
            <div class="flex flex-col items-center">
                <div class="text-[#2845AE] mb-4">
                    <i class="fas fa-shield-alt text-4xl"></i>
                </div>
                <h3 class="text-xl font-bold text-[#2845AE] mb-2">2 Year Warranty</h3>
                <p class="text-gray-600">Extended warranty coverage</p>
            </div>

            <!-- 24/7 Support -->
            <div class="flex flex-col items-center">
                <div class="text-[#2845AE] mb-4">
                    <i class="fas fa-headset text-4xl"></i>
                </div>
                <h3 class="text-xl font-bold text-[#2845AE] mb-2">24/7 Support</h3>
                <p class="text-gray-600">Round-the-clock assistance</p>
            </div>
        </div>
    </div>

    <!-- Flash Sale Section -->
    <% if (flashSaleProducts && flashSaleProducts.length > 0) { %>
    <div class="max-w-7xl mx-auto px-4 py-12">
        <h2 class="text-3xl font-bold text-[#2845AE] mb-8">Flash Sale</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <% flashSaleProducts.forEach(product => { %>
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <img src="<%= product.images[0] || 'https://via.placeholder.com/300x200' %>" 
                         alt="<%= product.name %>" 
                         class="w-full h-48 object-cover">
                    <div class="p-4">
                        <h3 class="text-lg font-semibold text-gray-800"><%= product.name %></h3>
                        <div class="flex items-center space-x-2 mb-2">
                            <span class="text-red-600 font-bold">-<%= product.discountPercentage %>%</span>
                            <span class="text-gray-500 line-through">$<%= product.price %></span>
                            <span class="text-[#2845AE] font-bold">
                                $<%= (product.price * (1 - product.discountPercentage/100)).toFixed(2) %>
                            </span>
                        </div>
                        <a href="/product/<%= product._id %>" 
                           class="block text-center bg-[#2845AE] text-white px-4 py-2 rounded-md hover:bg-[#1e3690]">
                            View Details
                        </a>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
    <% } %>

    <!-- Categories Section -->
    <div class="bg-gray-100 py-12">
        <div class="max-w-7xl mx-auto px-4">
            <h2 class="text-3xl font-bold text-gray-900 mb-8">Shop by Category</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <% categories.forEach(category => { %>
                    <a href="/category/<%= category._id %>" class="group">
                        <div class="bg-white rounded-lg shadow-md overflow-hidden transform transition duration-300 hover:scale-105">
                            <img src="<%= category.thumbnail || 'https://via.placeholder.com/300x200' %>" 
                                 alt="<%= category.name %>" 
                                 class="w-full h-48 object-cover">
                            <div class="p-4">
                                <h3 class="text-xl font-semibold text-gray-800 group-hover:text-indigo-600">
                                    <%= category.name %>
                                </h3>
                                <p class="text-gray-600"><%= category.description %></p>
                            </div>
                        </div>
                    </a>
                <% }); %>
            </div>
        </div>
    </div>

    <!-- Best Selling Products -->
    <div class="max-w-7xl mx-auto px-4 py-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Best Selling Products</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <% bestSellingProducts.forEach(product => { %>
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <img src="<%= product.images[0] || 'https://via.placeholder.com/300x200' %>" 
                         alt="<%= product.name %>" 
                         class="w-full h-48 object-cover">
                    <div class="p-4">
                        <h3 class="text-lg font-semibold text-gray-800"><%= product.name %></h3>
                        <p class="text-gray-600 mb-2"><%= product.brand %></p>
                        <div class="flex justify-between items-center">
                            <span class="text-indigo-600 font-bold">$<%= product.price %></span>
                            <a href="/product/<%= product._id %>" 
                               class="text-indigo-600 hover:text-indigo-800">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <!-- Premium Product Showcase -->
    <% if (premiumProduct) { %>
    <div class="bg-gray-900 text-white py-16">
        <div class="max-w-7xl mx-auto px-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
                <div>
                    <h2 class="text-3xl font-bold mb-4">Premium Pick</h2>
                    <h3 class="text-2xl mb-4"><%= premiumProduct.name %></h3>
                    <p class="mb-6"><%= premiumProduct.description %></p>
                    <div class="mb-6">
                        <span class="text-3xl font-bold">$<%= premiumProduct.price %></span>
                    </div>
                    <a href="/product/<%= premiumProduct._id %>" 
                       class="inline-block bg-indigo-600 text-white px-6 py-3 rounded-md hover:bg-indigo-700">
                        Learn More
                    </a>
                </div>
                <div>
                    <img src="<%= premiumProduct.images[0] || 'https://via.placeholder.com/500x300' %>" 
                         alt="<%= premiumProduct.name %>" 
                         class="rounded-lg shadow-xl">
                </div>
            </div>
        </div>
    </div>
    <% } %>

    <!-- Brands Section -->
    <div class="max-w-7xl mx-auto px-4 py-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Our Brands</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
            <% brands.forEach(brand => { %>
                <div class="bg-white rounded-lg shadow-md p-4 text-center">
                    <span class="text-gray-800 font-medium"><%= brand %></span>
                </div>
            <% }); %>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-[#2845AE] text-white mt-20">
        <div class="max-w-7xl mx-auto px-4 py-12">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div>
                    <h3 class="text-xl font-bold mb-4">InfinityTech</h3>
                    <p class="text-gray-200">Premium laptops for professionals, gamers, and creators.</p>
                </div>
                <div>
                    <h3 class="text-xl font-bold mb-4">Quick Links</h3>
                    <ul class="space-y-2">
                        <li><a href="/shop" class="text-gray-200 hover:text-white">Shop</a></li>
                        <li><a href="/about" class="text-gray-200 hover:text-white">About Us</a></li>
                        <li><a href="/contact" class="text-gray-200 hover:text-white">Contact</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="text-xl font-bold mb-4">Contact Us</h3>
                    <p class="text-gray-200">Email: info@infinitytech.com</p>
                    <p class="text-gray-200">Phone: (555) 123-4567</p>
                </div>
            </div>
            <div class="border-t border-blue-700 mt-8 pt-8 text-center">
                <p class="text-gray-200">&copy; 2025 InfinityTech. All rights reserved.</p>
            </div>
        </div>
    </footer>
</body>
</html>
